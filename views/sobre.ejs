

<!-- Sobre Section -->
<section class="py-5 mt-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-circle fa-10x text-primary"></i>
                    </div>
                </div>
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold mb-4">Sobre Mim</h1>
                    <h2 class="h3 text-primary mb-3"><%= data.titulo %></h2>
                    <p class="lead mb-4"><%= data.sobre %></p>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5><i class="fas fa-envelope text-primary me-2"></i>Email</h5>
                            <p><%= data.contato.email %></p>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="fas fa-phone text-primary me-2"></i>Telefone</h5>
                            <p><%= data.contato.telefone %></p>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-3">
                        <a href="/<%= data.contato.linkedin %>" target="_blank" class="btn btn-outline-primary">
                            <i class="fab fa-linkedin"></i> LinkedIn
                        </a>
                        <a href="/<%= data.contato.github %>" target="_blank" class="btn btn-outline-dark">
                            <i class="fab fa-github"></i> GitHub
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Educação -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="section-title text-center mb-5">Formação Acadêmica</h2>
            <div class="row">
                <% data.educacao.forEach(edu => { %>
                <div class="col-lg-6 mb-4">
                    <div class="card education-card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><%= edu.curso %></h5>
                            <h6 class="card-subtitle mb-2 text-muted"><%= edu.instituicao %></h6>
                            <p class="card-text">
                                <span class="badge bg-success"><%= edu.status %></span>
                                <span class="text-muted ms-2"><%= edu.ano %></span>
                            </p>    
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Habilidades -->
    <section class="py-5">
        <div class="container">
            <h2 class="section-title text-center mb-5">Minhas Habilidades</h2>
            <div class="row">
                <% data.habilidades.forEach(habilidade => { %>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="skill-card text-center p-3">
                        <i class="fas fa-code text-primary mb-2"></i>
                        <h5><%= habilidade %></h5>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>

