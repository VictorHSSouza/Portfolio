<!-- Projetos Section -->
<section class="py-5 mt-5">
    <div class="container">
        <h1 class="display-4 fw-bold text-center mb-5">Meus Projetos</h1>
        
        <div class="row">
            <% data.projetos.forEach(projeto => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card project-card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <i class="fab fa-github text-primary me-2"></i>
                                <%= projeto.nome %>
                            </h5>
                            <p class="card-text flex-grow-1">
                                <%= projeto.descricao %>
                            </p>
                            
                            <div class="mb-3">
                                <h6 class="text-muted mb-2">Tecnologias:</h6>
                                <% projeto.tecnologias.forEach(tech => { %>
                                    <span class="badge bg-primary me-1 mb-1">
                                        <%= tech %>
                                    </span>
                                <% }); %>
                            </div>
                            
                            <div class="mt-auto">
                                <% if (projeto.url) { %>
                                    <a href="<%= projeto.url %>" target="_blank" class="btn btn-outline-primary w-100">
                                        <i class="fab fa-github me-2"></i>Ver no GitHub
                                    </a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <% if (data.projetos.length === 0) { %>
            <div class="text-center py-5">
                <i class="fas fa-code fa-5x text-muted mb-3"></i>
                <h3 class="text-muted">Nenhum projeto encontrado</h3>
                <p class="text-muted">Os projetos ser√£o carregados automaticamente do GitHub.</p>
            </div>
        <% } %>
        
        <div class="text-center mt-5">
            <a href="https://<%= data.contato.github %>" target="_blank" class="btn btn-primary btn-lg">
                <i class="fab fa-github me-2"></i>Ver Todos no GitHub
            </a>
        </div>
    </div>
</section>